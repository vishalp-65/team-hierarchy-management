{
   "compilerOptions": {
      "lib": ["es2020", "dom"],
      "target": "ES6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "rootDir": "./src" ,
      "skipLibCheck": true ,
      "esModuleInterop": true,
      // "strict": true,
      "typeRoots": [ "./node_module/@types",
      "./src/types"]
      
   },
   "include": ["src/**/*"]
}